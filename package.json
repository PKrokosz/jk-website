{
  "name": "jk-website",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Made-to-order footwear store built with Next.js.",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "depcheck": "depcheck --skip-missing=true --ignores=@vitest/coverage-v8,@types/pg",
    "cli": "tsx tools/cli/index.ts",
    "qa": "pnpm run cli -- quality",
    "qa:ci": "pnpm run cli -- quality:ci",
    "db:generate": "drizzle-kit generate:pg",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "pnpm --filter @jk/db run seed",
    "approve-builds": "pnpm approve-builds"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@jk/db": "workspace:*",
    "next": "14.2.13",
    "nodemailer": "^7.0.9",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "20.16.5",
    "@types/nodemailer": "^7.0.2",
    "@types/pg": "^8.15.5",
    "@types/react": "18.3.5",
    "@types/react-dom": "18.3.0",
    "@vitest/coverage-v8": "2.1.1",
    "depcheck": "^1.4.7",
    "drizzle-kit": "^0.24.0",
    "eslint": "8.57.0",
    "eslint-config-next": "14.2.13",
    "jsdom": "^27.0.1",
    "tsx": "^4.16.2",
    "typescript": "5.5.4",
    "vitest": "2.1.1"
  },
  "packageManager": "pnpm@10.18.3"
}
